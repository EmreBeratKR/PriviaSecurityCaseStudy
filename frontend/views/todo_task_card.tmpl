<div class="task-card">
    <div class="task-left">
      <form method="POST" action="/todo-task/toggle?id={{.Id}}&redirect_id={{.TodoListId}}">
        <button class="toggle {{if .IsCompleted}}checked{{end}}" type="submit">
          {{if .IsCompleted}}âœ“{{end}}
        </button>
      </form>
      <div class="task-desc">{{.Content}}</div>
    </div>
    <div class="task-actions">
      <div class="action-btn edit-btn">
        <img src="/icons/edit.svg" alt="Edit" width="16" height="16">
      </div>
      <form method="POST" action="/todo-task/delete?id={{.Id}}&redirect_id={{.TodoListId}}">
        <button class="action-btn delete-btn" type="submit">
          <img src="/icons/trash.svg" alt="Delete" width="16" height="16">
        </button>
      </form>
    </div>
</div>
  